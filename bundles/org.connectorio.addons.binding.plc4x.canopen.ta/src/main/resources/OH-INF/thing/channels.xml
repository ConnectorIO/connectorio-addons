  <channel-type id="ta-analog-output-temperature">
    <item-type>Number:Temperature</item-type>
    <label>Analog output (temperature)</label>
    <state readOnly="true" pattern="%.1f %unit%" />

    <config-description>
      <parameter name="index" type="integer" required="true">
        <label>Index</label>
        <description>Index of analog output.</description>
      </parameter>

      <parameter name="unit" type="text" required="true">
        <label>Unit</label>
        <description>Unit used by URV to report measured values.</description>
        <default>CELSIUS</default>
        <options>
          <option value="CELSIUS">CELSIUS</option>
          <option value="KELVIN">KELVIN</option>
        </options>
      </parameter>
    </config-description>
  </channel-type>

