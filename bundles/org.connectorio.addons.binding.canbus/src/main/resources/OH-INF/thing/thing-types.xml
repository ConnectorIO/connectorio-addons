<thing:thing-descriptions bindingId="co7io-canbus"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
  xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

  <bridge-type id="socketcan">
    <label>SocketCAN interface for CAN bus</label>
    <description>Defines CAN interface which uses SocketCAN under the hood.</description>

    <config-description>
      <parameter name="name" type="text" required="true">
        <label>Interface name</label>
        <description>Name of interface assigned by operating system.</description>
      </parameter>

      <parameter name="refreshInterval" type="integer" required="false">
        <label>Refresh interval</label>
        <description>Time between poll cycles.</description>
        <default>1000</default>
        <unitLabel>ms</unitLabel>
      </parameter>
    </config-description>
  </bridge-type>

  <thing-type id="message" extensible="switch,contact,number,byte">
    <supported-bridge-type-refs>
      <bridge-type-ref id="socketcan"/>
    </supported-bridge-type-refs>

    <label>CAN thing</label>
    <description>Mapping of a single CAN object identifier</description>

    <config-description>
      <parameter name="cob" type="integer">
        <label>CAN object identifier (COB)</label>
        <description>Identifier of a message used to exchange information.</description>
      </parameter>
      <parameter name="template" type="text">
        <label>Template</label>
        <description>
          Acceptance filter for incoming message and/or patter for published message.
          Please refer bit template documentation for detailed information.
        </description>
      </parameter>
    </config-description>
  </thing-type>

</thing:thing-descriptions>
