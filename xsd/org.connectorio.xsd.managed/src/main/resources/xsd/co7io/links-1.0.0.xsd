<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
  targetNamespace="http://connectorio.com/xmlns/managed/links/v1.0.0">

  <xs:include schemaLocation="common-1.0.0.xsd" />

  <xs:complexType name="links">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="link" type="link" />
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="link">
    <xs:sequence>
      <xs:element name="channel" type="typedReference" />
      <xs:element name="config" type="config" minOccurs="0" />
    </xs:sequence>
    <xs:attribute name="item" type="id" use="required" />
  </xs:complexType>

  <xs:complexType name="config">
    <xs:sequence>
      <xs:any />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="reference">
    <xs:simpleContent>
      <xs:restriction base="id-2s" />
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="id-2s">
    <xs:restriction base="xs:string">
      <xs:pattern value="[A-Za-z_][A-Za-z0-9\-_]*(:[A-Za-z_][A-Za-z0-9\-_]*)+" />
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="links" type="links" />

</xs:schema>
