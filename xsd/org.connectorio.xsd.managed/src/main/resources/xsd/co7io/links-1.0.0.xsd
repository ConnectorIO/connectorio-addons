<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
  xmlns:tns="https://connectorio.com/xmlns/managed/links/1.0.0"
  targetNamespace="https://connectorio.com/xmlns/managed/links/1.0.0">

  <xs:include schemaLocation="./common-1.0.0.xsd" />

  <xs:complexType name="links">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="link" type="tns:link" />
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="link">
    <xs:sequence>
      <xs:element name="channel" type="tns:typedReference" />
      <xs:element name="config" type="tns:config" minOccurs="0" />
    </xs:sequence>
    <xs:attribute name="item" type="tns:id" use="required" />
  </xs:complexType>

  <xs:element name="links" type="tns:links" />

</xs:schema>
