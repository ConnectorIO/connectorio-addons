<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
  targetNamespace="http://connectorio.com/xmlns/managed/things/v1.0.0">

  <xs:include schemaLocation="common-1.0.0.xsd" />

  <xs:complexType name="things">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="thing" type="thing" />
      <xs:element name="bridge" type="bridge" />
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="thing">
    <xs:sequence>
      <xs:element name="id" type="xs:string" />
      <xs:element name="bridge" type="reference" minOccurs="0" />
      <xs:element name="config" type="config" minOccurs="0" />
      <xs:element name="channel" type="channel" minOccurs="0" maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="type" type="typedId-2s" use="required" />
    <xs:attribute name="label" type="xs:string" use="required" />
  </xs:complexType>

  <xs:complexType name="bridge">
    <xs:sequence>
      <xs:element name="id" type="xs:string" />
      <xs:element name="bridge" type="reference" minOccurs="0" />
      <xs:element name="config" type="config" minOccurs="0" />
      <xs:element name="channel" type="channel" minOccurs="0" maxOccurs="unbounded" />
    </xs:sequence>
    <xs:attribute name="type" type="typedId-2s" use="required" />
    <xs:attribute name="label" type="xs:string" use="required" />
  </xs:complexType>

  <xs:complexType name="config">
    <xs:sequence>
      <xs:any />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="channel">
    <xs:sequence>
      <xs:element name="id" type="typedId-2s" />
      <xs:element name="type" type="typedId-2s" />
      <xs:element name="label" type="xs:string" minOccurs="0" />
      <xs:element name="config" type="config" minOccurs="0" />
    </xs:sequence>
  </xs:complexType>

  <xs:element name="things" type="things" />

</xs:schema>
