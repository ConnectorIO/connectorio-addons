<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
  targetNamespace="http://connectorio.com/xmlns/managed/items/v1.0.0">

  <xs:include schemaLocation="common-1.0.0.xsd" />

  <xs:complexType name="items">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="item" type="item" />
      <xs:element name="group" type="group" />
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="item">
    <xs:sequence>
      <xs:element name="type" type="xs:string" />
      <xs:element name="group" type="reference" minOccurs="0" />
      <xs:element name="tag" type="id" minOccurs="0" maxOccurs="unbounded" />
      <xs:element name="metadata" type="metadata" minOccurs="0" />
    </xs:sequence>
    <xs:attribute name="name" type="id" use="required" />
    <xs:attribute name="label" type="xs:string" use="required" />
  </xs:complexType>

  <xs:complexType name="group">
    <xs:sequence>
      <xs:element name="type" type="xs:string" fixed="Group" />
      <xs:element name="group" type="reference" minOccurs="0" />
      <xs:element name="tag" type="id" minOccurs="0" maxOccurs="unbounded" />
      <xs:element name="metadata" type="metadata" minOccurs="0" />
    </xs:sequence>
    <xs:attribute name="name" type="id" use="required" />
    <xs:attribute name="label" type="xs:string" use="required" />
  </xs:complexType>

  <xs:complexType name="metadata">
    <xs:sequence>
      <xs:any minOccurs="0" />
    </xs:sequence>
  </xs:complexType>

  <xs:element name="items" type="items" />

</xs:schema>
