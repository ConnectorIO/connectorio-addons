<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.connectorio.binding</groupId>
    <artifactId>plc4x</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>

  <groupId>org.connectorio.binding.plc4x</groupId>
  <artifactId>canopen</artifactId>
  <packaging>bundle</packaging>

  <name>ConnectorIO - Binding - PLC4X - CANopen</name>
  <description>Generic support for CANopen devices.</description>

  <dependencies>
    <dependency>
      <groupId>org.connectorio.binding</groupId>
      <artifactId>can</artifactId>
    </dependency>
    <dependency>
      <groupId>org.connectorio.binding.plc4x</groupId>
      <artifactId>shared</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.plc4x.sandbox</groupId>
      <artifactId>test-java-can-driver</artifactId>
    </dependency>

    <dependency>
      <groupId>org.connectorio.binding</groupId>
      <artifactId>test</artifactId>
    </dependency>

    <dependency>
      <groupId>org.openhab.core.bundles</groupId>
      <artifactId>org.openhab.core.config.discovery</artifactId>
    </dependency>


    <!--
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>framework</artifactId>
      <type>kar</type>
    </dependency>
    -->

    <dependency>
      <groupId>org.connectorio.binding.features</groupId>
      <artifactId>plc4x</artifactId>
      <classifier>features</classifier>
      <type>xml</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Import-Package>
              org.osgi.framework;version=1.8.0,
              org.apache.plc4x.java.transport.socketcan.*,
              *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>


</project>
